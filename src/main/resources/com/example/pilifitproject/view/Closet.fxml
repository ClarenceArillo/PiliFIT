                        </HBox>

                        <!-- Style -->
                        <HBox spacing="10">
                           <Text text="STYLE:" />
                           <MenuButton fx:id="styleDropdown" style="-fx-background-radius: 10;" text="Select Style" />
                        </HBox>

                        <!-- Color -->
                        <HBox spacing="10">
                           <Text text="COLOR:" />
                           <TextField fx:id="colorInput" promptText="Enter color" style="-fx-background-radius: 10;" />
                        </HBox>

                        <!-- Size -->
                        <HBox spacing="10">
                           <Text text="SIZE:" />
                           <TextField fx:id="sizeInput" promptText="Enter size" style="-fx-background-radius: 10;" />
                        </HBox>

                     </children>
                  </VBox>
               </children>
            </HBox>

            <!-- Bottom Bar -->
            <HBox alignment="CENTER_LEFT" spacing="10">
               <children>
                  <Button fx:id="editNameBtn" styleClass="icon-button" text="âœŽ" />
