<AnchorPane prefHeight="440.0" prefWidth="660.0" stylesheets="@../styles/Closet.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pilifitproject.view.Closet">
   <children>

      <!-- Container with rounded corners -->
      <VBox layoutX="20.0" layoutY="-10.0" prefWidth="620.0" spacing="20" style="-fx-background-color: white; -fx-background-radius: 20; -fx-border-radius: 20; -fx-border-color: #ccc; -fx-padding: 20;">
         <children>

            <!-- Image & Form Details Row -->
            <HBox spacing="30">
               <children>

                  <!-- Image Container -->
                  <AnchorPane prefHeight="250" prefWidth="220" style="-fx-background-color: #CCCCCC; -fx-background-radius: 15;">
